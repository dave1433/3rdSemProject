server {
    listen 80;

    root /usr/share/nginx/html;
    index index.html;

    # Reverse proxy to backend
    location /api/ {
        proxy_pass $BACKEND_URL;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # All other routes â†’ React app
    location / {
        try_files $uri /index.html;
    }
}
